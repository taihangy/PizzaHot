<div class="pizza_form">
	<% if flash[:alert]%>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>

	<%= form_tag do %>
		<fieldset>
			<legend>Please Log in</legend>
			<div class="field">
				<%= label_tag :name, "Name:" %>
				<%= text_field_tag :name, @user.name, size: 40%>
			</div>
			<div class="field">
				<%= label_tag :password, "Password:" %>
				<%= password_field_tag :password, @user.password, size: 40%>
			</div>
			<div class="actions">
				<%= submit_tag "Login" %>
			</div>
		</fieldset>
	<% end %>
</div>